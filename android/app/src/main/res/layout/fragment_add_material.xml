<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_addMaterial"
    tools:context="cn.org.bjca.yami.view.AddMaterialFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:text="老师"
                android:textSize="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_addMaterial1"
                    android:layout_width="70dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="#8B2500"
                    android:gravity="center_horizontal"
                    android:text="加料一"
                    android:textColor="#ffffff" />


                <TextView
                    android:id="@+id/tv_addMaterial2"
                    android:layout_width="70dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="#8B2500"
                    android:gravity="center_horizontal"
                    android:text="加料二"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_addMaterial3"
                    android:layout_width="70dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="#8B2500"
                    android:gravity="center_horizontal"
                    android:text="加料三"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/tv_addMaterial4"
                    android:layout_width="70dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="#8B2500"
                    android:gravity="center_horizontal"
                    android:text="加料四"
                    android:textColor="#ffffff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="3"
                    android:background="#6495ED">

                </LinearLayout>

                <Button
                    android:id="@+id/btn_sure"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="确定" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_select"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="#6495ED"
                android:text="捣蛋一下" />
        </LinearLayout>


        <cn.org.bjca.yami.view.DragView
            android:id="@+id/tv_setMeal_yes2"
            android:layout_width="70dp"
            android:layout_height="120dp"
            android:layout_marginBottom="-60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="450dp"
            android:background="#8B7355"
            android:text="已点套餐"
            android:textSize="15sp"
            android:visibility="invisible" />

        <cn.org.bjca.yami.view.DragView
            android:id="@+id/tv_addMaterial_yes2"
            android:layout_width="70dp"
            android:layout_height="120dp"
            android:layout_marginBottom="-60dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="450dp"
            android:layout_toRightOf="@id/tv_setMeal_yes2"
            android:background="#8B7355"
            android:text="已点加料"
            android:textSize="15sp"
            android:visibility="invisible" />

</FrameLayout>
